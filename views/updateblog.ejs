<%- include('partials/plainHeader') %>


  <form action="/note/update/<%=updateYourSingleBlog._id%>" method="post">
    <section class="text-gray-400 bg-gray-900 body-font">
      <div class="container px-5 pb-24 pt-4 mx-auto flex flex-wrap items-center">

        <div
          class="lg:w-full md:w-1/2 bg-gray-800 bg-opacity-50 rounded-lg p-8 flex flex-col md:m-auto w-full mt-10 md:mt-0">
          <div class="flex justify-between ">
            <h2 class="text-white text-lg font-medium title-font mb-5">Update Blog</h2>
            <a class="text-indigo-400" href="/note/delete/<%=updateYourSingleBlog._id%>">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
              </svg>
            </a>
          </div>

          <div class="relative mb-4">
            <label for="full-name" class="leading-7 text-sm text-gray-400">Title</label>
            <input type="text" id="full-name" value="<%=updateYourSingleBlog.title%>" name="title"
              class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border border-gray-600 focus:border-indigo-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>
          <div class="relative mb-4">
            <label for="email" class="leading-7 text-sm text-gray-400">Description</label>
            <!-- <textarea type="text" id="email" name="description"
              class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border border-gray-600 focus:border-indigo-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"><%=updateYourSingleBlog.description%></textarea> -->
            <textarea id="editor" name="description" required><%=updateYourSingleBlog.description%></textarea>
          </div>
          <div class="relative mb-4">
            <label for="email" class="leading-7 text-sm text-gray-400">Image Link</label>
            <input type="text" id="email" value="<%=updateYourSingleBlog.imageLink%>" name="imageLink"
              class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border border-gray-600 focus:border-indigo-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>


          <div class="">
            <div class="flex items-center mb-4">
              <input id="default-radio-1" type="radio" value="true" name="isPublic"
                class="w-6 h-6 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800  dark:bg-gray-700 dark:border-gray-600">
              <label for="default-radio-1"
                class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Public</label>
            </div>
            <div class="flex items-center">
              <input checked="" id="default-radio-2" type="radio" value="false" name="isPublic"
                class="w-6 h-6 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800  dark:bg-gray-700 dark:border-gray-600">
              <label for="default-radio-2"
                class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Private</label>
            </div>
          </div>


